---
import Globe from "./svg/Globe.astro";
import Code from "./svg/Code.astro";
import DataBase from "./svg/DataBase.astro";
import Rocket from "./svg/Rocket.astro";

const ServiceItems = [
  {
    icon: Globe,
    title: "Desarrollo Web",
    description:
      "Creamos sitios y aplicaciones modernas, responsivas y optimizadas para buscadores.",
  },
  {
    icon: Code,
    title: "Sistemas Personalizados",
    description:
      "Desarrollamos software a medida que se adapta a las necesidades de tu negocio.",
  },
  {
    icon: DataBase,
    title: "Integración de APIs",
    description:
      "Conectamos tus sistemas con servicios externos para automatizar procesos.",
  },
  {
    icon: Rocket,
    title: "Optimización de Rendimiento",
    description:
      "Mejoramos la velocidad y eficiencia de tus aplicaciones para una mejor experiencia.",
  },
];
---

<section
  id="Servicios"
  class="py-16 md:py-24 bg-gradient-to-tr from-puco-900 via-puco-700 to-puco-950">
  <div
    class="container mx-auto px-4 max-w-7xl bg-white/10 backdrop-blur-md border border-white/30 p-6 md:p-12 rounded-4xl shadow-lg shadow-puco-500/30">
    <div class="text-center mb-16">
      <h2
        class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight bg-gradient-to-br from-puco-300 via-puco-100 to-puco-400 bg-clip-text text-transparent">
        Nuestros Servicios
      </h2>
      <p
        class="mt-4 text-lg md:text-xl lg:text-2xl text-white/80 max-w-4xl mx-auto">
        Soluciones tecnológicas completas para alcanzar tus objetivos de
        negocio.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        ServiceItems.map(({icon: Icon, title, description}) => (
          <div class="bg-white/70 hover:bg-white/90 backdrop-blur-md rounded-xl p-6 shadow-md hover:shadow-lg hover:shadow-white/30 transition-all duration-300 hover:-translate-y-2">
            <div class="mb-4">
              <Icon className="w-14 h-14 text-puco-800" aria-hidden="true" />
            </div>
            <h3 class="text-xl font-semibold text-puco-950 mb-2 pointer-events-none">
              {title}
            </h3>
            <p class="text-gray-600 leading-relaxed pointer-events-none">
              {description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
